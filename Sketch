
<STARTSCRIPT> <DOUBLEPOINTS> <ID> 
<OPENBLOCK>
 
(VariableDeclaration())* 

(FunctionDeclaration())*

(UseIf())*

(UseWhile())*

(UseFor())*

void IncludeDeclaration():
{
	<#> <INCLUDE> <ID> <SEMICOLON>
}

void VariableDeclaration():
{
  (DataType() < ID > <SEMICOLON >)
}

void DataType():
{
  < INTEGERTYPE > |< STRINGTYPE > | < BOOLTYPE >
}




<CLOSEBLOCK>


